@model Net51Zhang.Models.Diary.EntityModel.DiaryModel

<div class="clearfix">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-lg-12">
                <h2 class="text-info" style="display: inline-block">@Model.Title</h2>
                <div class="pull-right" style="display: inline-block">
                    <span style="color: gray; cursor: pointer" title="赞一个" id="star-up-uri"><i class="fa fa-thumbs-up fa-3x" aria-hidden="true"></i></span>
                    <div class="text-center"><span id="star-up-num">@(Model.StarUp ?? 0)</span></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12"><span>@Model.CreateTime.Value.ToString("yyyy-MM-dd")</span></div>
        </div>
        <div class="@(string.IsNullOrEmpty(Model.Images) ? "hidden" : "form-group")">
            @{
                var images = (Model.Images ?? "").Split(';').Select(s => s.Trim());
                foreach (var image in images)
                {
                    <div class="col-lg-4">
                        <img src="@Href("~/Images/diary/" + image)" style="width: 100%"/>
                    </div>
                }
            }
        </div>
        <div class="form-group">
            <div class="col-lg-12 text-center">
                <pre class="diary-content">
                    @Model.Content
                </pre>
            </div>
        </div>
        <div class=@(string.IsNullOrEmpty(Model.Video) ? "hidden" : "form-group")>
            <div class="col-lg-12 text-center">
                <embed src="@Model.Video" allowFullScreen="true" quality="high" width="480" height="400" align="middle" allowScriptAccess="always" type="application/x-shockwave-flash"/>
            </div>
        </div>
    </div>
</div>
