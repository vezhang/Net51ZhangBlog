@model Net51Zhang.Models.Manager.RegisterModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 25px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1>注册</h1>
            <hr/>
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.ConfirmPassword)
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" value="注册" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    }
</div>



