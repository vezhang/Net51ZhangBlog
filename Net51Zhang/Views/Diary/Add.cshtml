@model Net51Zhang.Models.Diary.EntityModel.DiaryModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 25px">
    @using (Html.BeginForm("Add", "Diary", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1>添加日记</h1>
            <hr/>
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreateTime, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.CreateTime)
                    @Html.ValidationMessageFor(model => model.CreateTime)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tag, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Tag)
                    @Html.ValidationMessageFor(model => model.Tag)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StarUp, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.StarUp)
                    @Html.ValidationMessageFor(model => model.StarUp)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StarDown, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.StarDown)
                    @Html.ValidationMessageFor(model => model.StarDown)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Video, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Video)
                    @Html.ValidationMessageFor(model => model.Video)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Images, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Images)
                    @Html.ValidationMessageFor(model => model.Images)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Files, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Files, new {@type="file",  multiple="multiple"})
                    @Html.ValidationMessageFor(model => model.Images)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Content, new {@class = "control-label col-lg-2"})
                <div class="col-lg-10">
                    @Html.TextAreaFor(model => model.Content, new {@rows = "8", @class="form-control"})
                    @Html.ValidationMessageFor(model => model.Content)
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" value="添加" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    }
</div>



